<% include header %>
<form method="post">
用户名： <input type="text" name="name" required="required"><br/>
密码：   <input type="password" name="password" required="required"></br>
确认密码:<input type="password" name="password-repeat" required="required"><br/>
邮箱：   <input type="email" id="myemail" name="email" required="required" onblur="checkEmail()"><span id="myspan"></span>
<br/>
         <input type="submit" value="注册">
</form>
<script>
    function checkEmail()
{
	var email = document.getElementById("myemail").value;
	var obj = document.getElementById("myspan");
	var pattern = /^[a-zA-Z]\w+[@]\w+[.][\w.]+$/;
	if(pattern.test(email))
	{
  		obj.innerText = "right";
  		obj.style.color = 'green';
	}
	else{
		obj.innerText = "the format of email is wrong!";
  		obj.style.color = 'red';
	}
}
</script>
